{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
  "linter": {
    "enabled": true,
    "rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
      "correctness": {
        "noUnusedImports": {
          "level": "error",
          "fix": "safe"
        }
      },
      "style":{
        "useImportType": {
          "level": "warn",
          "fix": "safe"
        }
      },
      "a11y": {
        "useKeyWithClickEvents": {
          "level": "info"
        }
      }
    }
  },
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
