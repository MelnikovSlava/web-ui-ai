{
	"root": false,
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"correctness": {
				"noUnusedImports": {
					"level": "info",
					"fix": "safe",
					"options": {}
				}
			},
			"complexity": {
				"noForEach": "off"
			},
			"style": {
				"useTemplate": {
					"level": "warn",
					"fix": "safe",
					"options": {}
				},
				"useImportType": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}